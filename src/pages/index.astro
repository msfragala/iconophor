---
import { Playground } from '@/components/playground.jsx';
import { libraries } from '@/constants/libraries';
import { svgAttributes } from '@/constants/svg-attributes';
import Layout from '@/layouts/Layout.astro';
---

<Layout
  title="Iconophor"
  description="An open-source CDN for popular SVG icon libraries."
>
  <div class="space-y-60" style={{ borderColor: 'red' }}>
    <section>
      <h1 class="heading-xl text-center">Iconophor</h1>
      <p class="mt-48">
        Iconophor is an{' '}
        <a class="link" href="https://github.com/msfragala/iconophor">
          open-source
        </a>{' '}
        CDN for popular SVG icon libraries that enables you to load icons as images
        while still controlling the fill, stroke, etc. via query parameters. Loading
        SVG icons as images can be beneficial for performance in some contexts, especially
        when using{' '}
        <span class="inline-code">loading=&#34;lazy&#34;</span>.
      </p>
    </section>
    <section>
      <h2 class="heading-lg mb-24">Playground</h2>
      <p class="mb-24">Try out the API in this demo with Feather Icons:</p>
      <Playground client:load />
    </section>
    <section>
      <h2 class="heading-lg mb-24">Icon libraries</h2>
      <ul class="grid grid-cols-1 gap-y-36 w-full">
        {
          libraries.map((library) => (
            <li>
              <h3 class="mb-4">
                <a
                  class="heading-md text-pink-300 hover:underline"
                  href={library.homepage}
                >
                  {library.name}
                </a>
              </h3>
              <p class="mb-8">
                <a
                  aria-label={`${library.name} on GitHub`}
                  class="text-sm hover:underline"
                  href={library.github}
                >
                  GitHub
                </a>{' '}
                â€¢{' '}
                <a
                  aria-label={`${library.name} on Unpkg`}
                  class="text-sm hover:underline"
                  href={library.unpkg}
                >
                  Unpkg
                </a>
              </p>
              <p class="pill break-words max-w-full overflow-hidden">
                {library.urlPattern}
              </p>
            </li>
          ))
        }
      </ul>
    </section>
    <section>
      <h2 class="heading-lg mb-24">Query parameters</h2>
      <ul class="space-y-12 md:columns-2 md:space-y-16">
        {
          svgAttributes.map((name) => (
            <li>
              <a
                class="bg-background-soft hover:text-pink-300 text-sm w-content px-8 py-4 rounded block"
                href={`https://developer.mozilla.org/en-US/docs/Web/SVG/Attribute/${name}`}
              >
                <code>?{name}</code>
              </a>
            </li>
          ))
        }
      </ul>
    </section>
  </div>
</Layout>
